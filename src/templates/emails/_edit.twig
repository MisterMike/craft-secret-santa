{% extends '_layouts/cp' %}

{% set title = 'New email template'|t('secret-santa') %}

{% import "_includes/forms" as forms %}

{% block content %}
	<form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('secret-santa/emails/save') }}
    {{ redirectInput('secret-santa/emails') }}

    <div class="field">
        <div class="heading">
            <label for="title">{{ 'Title'|t('app') }}</label>
        </div>
        <div class="input">
            <input
                id="title"
                name="title"
                class="text fullwidth"
                value="{{ group.title ?? '' }}"
                autofocus
                required
            >
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn submit">
            {{ 'Save'|t('app') }}
        </button>
    </div>
</form>
{% endblock %}